{
  "name": "WebClippy",
  "version": "1.0",
  "description": "TODO",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "ui/popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistant": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "run_at": "document_end",
      "js": ["tutorial_content.js", "dialog.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["checks.js"]
    }
  ],
  "icons": {
    "128": "ui/img/icon.png"
  },
  "permissions": ["activeTab", "tabs"],
  "web_accessible_resources": [
    "ui/*.html",
    "ui/*/*.html",
    "ui/css/*.css"
  ]
}
